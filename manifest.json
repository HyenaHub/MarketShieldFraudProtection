{
  "manifest_version": 3,
  "name": "MarketShield Fraud Protection",
  "version": "1.0.0",
  "description": "Scan Facebook Marketplace listings for potential fraud and report suspicious posts.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://api.marketshield.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/marketplace/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
